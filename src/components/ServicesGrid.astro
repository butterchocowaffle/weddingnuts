---
import { ArrowRight } from "lucide-react";
import landingContent from "../data/landing-content.json";

const { services } = landingContent;
---

<section
    class="py-16 bg-gray-50 relative overflow-hidden min-h-screen snap-start flex flex-col justify-center"
    id="services-section"
>
    <!-- Background Video Layer -->
    <div class="absolute inset-0 z-0">
        {
            services.backgroundVideos?.map((videoStats, index) => (
                <div
                    class="services-video-container absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0"
                    data-index={index}
                    aria-hidden="true"
                >
                    <video
                        autoplay
                        muted
                        playsinline
                        preload="auto"
                        class="w-full h-full object-cover"
                    >
                        <source src={videoStats} type="video/mp4" />
                    </video>
                </div>
            ))
        }
        <!-- Overlay for readability -->
        <div class="absolute inset-0 bg-white/88 backdrop-blur-[3px]"></div>
    </div>

    <!-- Content Container -->
    <!-- Mobile: Add heavy left padding to clear the pilar -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex justify-between items-end mb-10">
            <div>
                <h2
                    class="text-6xl md:text-6xl font-serif font-extrabold text-marigold-500"
                >
                    Build Your Dream Team
                </h2>
                <p class="text-amber-600 mt-2">
                    Everything you need for a grand celebration.
                </p>
            </div>
            <a
                href="#"
                class="hidden md:flex items-center text-orange-600 font-bold hover:text-orange-500 transition group"
            >
                View All Categories <ArrowRight
                    className="ml-2 group-hover:translate-x-1 transition-transform"
                    size={20}
                />
            </a>
        </div>

        <!-- Bento Grid Layout -->
        <!-- Mobile: 1 column, Desktop: 4 columns -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 auto-rows-[200px]">
            <!-- Venues (Large Tile) -->
            <a
                href="#"
                class="col-span-2 row-span-2 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.pexels.com/photos/33417234/pexels-photo-33417234.jpeg"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Wedding Venue"
                    loading="lazy"
                    width="600"
                    height="400"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent p-6 flex flex-col justify-end"
                >
                    <h3 class="text-white text-2xl font-serif font-bold">
                        Venues & Lawns
                    </h3>
                    <p
                        class="text-gray-300 text-sm mt-1 opacity-0 group-hover:opacity-100 transition duration-300 transform translate-y-2 group-hover:translate-y-0"
                    >
                        From palaces to intimate gardens
                    </p>
                </div>
            </a>

            <!-- Catering -->
            <a
                href="#"
                class="col-span-2 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1555244162-803834f70033?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Catering"
                    loading="lazy"
                    width="400"
                    height="300"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Catering</h3>
                </div>
            </a>

            <!-- Decor -->
            <a
                href="#"
                class="col-span-1 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.pexels.com/photos/8886985/pexels-photo-8886985.jpeg"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Decor"
                    loading="lazy"
                    width="400"
                    height="300"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Decor</h3>
                </div>
            </a>

            <!-- Photography -->
            <a
                href="#"
                class="col-span-1 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.pexels.com/photos/16525677/pexels-photo-16525677.jpeg"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Photography"
                    loading="lazy"
                    width="400"
                    height="300"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Photography</h3>
                </div>
            </a>

            <!-- Attire/Makeup -->
            <a
                href="#"
                class="col-span-2 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.pexels.com/photos/2114229/pexels-photo-2114229.jpeg"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Makeup"
                    loading="lazy"
                    width="300"
                    height="200"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Makeup & Henna</h3>
                </div>
            </a>
        </div>

        <div class="mt-8 text-center md:hidden">
            <a
                href="#"
                class="inline-flex items-center text-royalPink-600 font-bold hover:text-royalPink-800 transition group"
            >
                View All Categories <ArrowRight
                    className="ml-2 group-hover:translate-x-1 transition-transform"
                    size={20}
                />
            </a>
        </div>
    </div>
</section>

<script>
    const section = document.getElementById("services-section");
    if (section) {
        const videoContainers = section.querySelectorAll(
            ".services-video-container",
        );
        const videos = Array.from(videoContainers).map((container) =>
            container.querySelector("video"),
        );
        let currentVideoIndex = -1;
        let isSwitching = false;

        const playVideoToCheck = async (videoEl) => {
            try {
                if (videoEl.readyState < 2) {
                    await new Promise((resolve) => {
                        videoEl.oncanplay = resolve;
                        setTimeout(resolve, 3000);
                    });
                }
                await videoEl.play();
                return true;
            } catch (e) {
                return false;
            }
        };

        const switchVideo = async () => {
            if (isSwitching) return;
            isSwitching = true;

            let nextIndex = (currentVideoIndex + 1) % videoContainers.length;
            let attempts = 0;
            let foundPlayable = false;

            while (attempts < videos.length && !foundPlayable) {
                const nextContainer = videoContainers[nextIndex];
                const nextVideo = videos[nextIndex];
                nextVideo.currentTime = 0;

                const isPlaying = await playVideoToCheck(nextVideo);

                if (isPlaying) {
                    if (currentVideoIndex >= 0) {
                        const currentContainer =
                            videoContainers[currentVideoIndex];
                        currentContainer.classList.remove("opacity-100");
                        currentContainer.classList.add("opacity-0");
                        const oldVideo = videos[currentVideoIndex];
                        setTimeout(() => {
                            oldVideo.pause();
                        }, 1000);
                    }

                    nextContainer.classList.remove("opacity-0");
                    nextContainer.classList.add("opacity-100");
                    currentVideoIndex = nextIndex;
                    foundPlayable = true;
                } else {
                    nextIndex = (nextIndex + 1) % videoContainers.length;
                    attempts++;
                }
            }
            isSwitching = false;
        };

        if (videos.length > 0) {
            // If only one video, let it loop forever
            if (videos.length === 1) {
                const singleVideo = videos[0];
                if (singleVideo) {
                    singleVideo.setAttribute("loop", "");
                    // Start playing when in view
                    const observer = new IntersectionObserver(
                        (entries) => {
                            entries.forEach((entry) => {
                                if (entry.isIntersecting) {
                                    videoContainers[0].classList.add(
                                        "opacity-100",
                                    );
                                    singleVideo.play().catch(() => {});
                                }
                            });
                        },
                        { threshold: 0.1 },
                    );
                    observer.observe(section);
                }
            } else {
                // Multiple videos - cycle through them infinitely
                videos.forEach((video, idx) => {
                    if (video) {
                        video.removeAttribute("loop");
                        video.onended = () => {
                            if (idx === currentVideoIndex && !isSwitching) {
                                switchVideo();
                            }
                        };
                    }
                });
                // Observer to play only when in view
                const observer = new IntersectionObserver(
                    (entries) => {
                        entries.forEach((entry) => {
                            if (
                                entry.isIntersecting &&
                                currentVideoIndex === -1
                            ) {
                                switchVideo();
                            }
                        });
                    },
                    { threshold: 0.1 },
                );
                observer.observe(section);
            }
        }
    }
</script>
