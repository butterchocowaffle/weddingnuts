---
import { Play, Quote, MapPin, Instagram, Youtube } from "lucide-react";
import landingContent from "../data/landing-content.json";

const { testimonials } = landingContent;
const { videoTestimonials, textTestimonials } = testimonials;
---

<section class="py-16 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <span
                class="text-royalPink-600 font-bold tracking-wider uppercase text-sm"
                >Testimonials</span
            >
            <h2
                class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mt-2"
            >
                Real Weddings, Real Stories
            </h2>
        </div>

        <!-- Video Cards Scroll Container -->
        <h3
            class="text-xl font-bold text-gray-900 mb-6 px-2 border-l-4 border-marigold-500 ml-1"
        >
            Video Stories
        </h3>
        <div class="flex overflow-x-auto gap-6 pb-8 hide-scroll snap-x">
            {
                videoTestimonials.map((testimonial, index) => (
                    <div class="min-w-[280px] md:min-w-[320px] bg-black rounded-xl overflow-hidden shadow-lg relative aspect-9/16 group cursor-pointer snap-center transform transition-transform hover:-translate-y-2">
                        {/* Render Content Based on Type */}
                        {testimonial.type === "url" ||
                        testimonial.type === "asset" ? (
                            <>
                                <img
                                    src={
                                        testimonial.type === "asset"
                                            ? testimonial.src
                                            : testimonial.thumbnail
                                    }
                                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition duration-500"
                                    alt={testimonial.title}
                                />
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                                        <Play
                                            className="text-white ml-1 fill-white"
                                            size={24}
                                        />
                                    </div>
                                </div>
                            </>
                        ) : testimonial.type === "youtube" ? (
                            <iframe
                                class="w-full h-full"
                                src={testimonial.src}
                                title={testimonial.title}
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen
                            />
                        ) : testimonial.type === "instagram" ? (
                            <div class="w-full h-full bg-linear-to-br from-purple-600 via-pink-500 to-orange-400 flex items-center justify-center">
                                <Instagram className="text-white" size={48} />
                                <p class="absolute bottom-20 text-white font-bold text-sm px-4 text-center">
                                    View on Instagram
                                </p>
                                {/* In a real scenario, you'd embed the IG post here or link to it */}
                                <a
                                    href={testimonial.src}
                                    target="_blank"
                                    class="absolute inset-0 z-10"
                                />
                            </div>
                        ) : null}

                        <div class="absolute bottom-0 left-0 right-0 p-4 bg-linear-to-t from-black to-transparent pointer-events-none">
                            <p class="text-white font-bold text-lg leading-tight mb-1">
                                {testimonial.title}
                            </p>
                            <p class="text-gray-300 text-sm flex items-center">
                                <MapPin
                                    size={14}
                                    className="text-marigold-500 mr-1"
                                />
                                {testimonial.location}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Text Testimonials Scroll Scroll Container -->
        <div class="mt-16">
            <h3
                class="text-xl font-bold text-gray-900 mb-6 px-2 border-l-4 border-royalPink-500 ml-1"
            >
                Client Reviews
            </h3>
            <div class="flex overflow-x-auto gap-6 pb-4 hide-scroll snap-x">
                {
                    textTestimonials.map((item, index) => (
                        <div class="w-[85vw] max-w-[400px] md:w-[450px] bg-champagne/30 p-8 rounded-2xl relative border border-champagne/50 snap-center shrink-0 flex flex-col gap-4">
                            <Quote
                                className="text-marigold-400 opacity-60 self-start"
                                size={40}
                            />
                            <div class="relative z-10">
                                <p class="text-lg text-gray-700 italic font-serif leading-relaxed min-h-[100px] flex items-center">
                                    "{item.text}"
                                </p>
                                <div class="mt-6 flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-royalPink-100 flex items-center justify-center font-bold text-royalPink-600">
                                        {item.author.charAt(0)}
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="font-bold text-gray-900">
                                            {item.author}
                                        </span>
                                        <span class="text-sm font-normal text-gray-500">
                                            {item.subtitle}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
