---
import { Play, Quote, MapPin } from 'lucide-react';
---

<section class="py-16 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <span class="text-royalPink-600 font-bold tracking-wider uppercase text-sm">Testimonials</span>
            <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mt-2">Real Weddings, Real Stories</h2>
        </div>

        <!-- Video Cards (Simulated) -->
        <div class="flex overflow-x-auto gap-6 pb-8 hide-scroll snap-x">
            <!-- Video 1 -->
            <div class="min-w-[280px] md:min-w-[320px] bg-black rounded-xl overflow-hidden shadow-lg relative aspect-[9/16] group cursor-pointer snap-center transform transition-transform hover:-translate-y-2">
                <img 
                    src="https://images.unsplash.com/photo-1583939003579-730e3918a45a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition duration-500" 
                    alt="Couple 1"
                >
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                        <Play className="text-white ml-1 fill-white" size={24} />
                    </div>
                </div>
                <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                    <p class="text-white font-bold text-lg leading-tight mb-1">Aditya & Sneha's Royal Jaipur Wedding</p>
                    <p class="text-gray-300 text-sm flex items-center">
                        <MapPin size={14} className="text-marigold-500 mr-1" />
                        Jaipur, Rajasthan
                    </p>
                </div>
            </div>

            <!-- Video 2 -->
            <div class="min-w-[280px] md:min-w-[320px] bg-black rounded-xl overflow-hidden shadow-lg relative aspect-[9/16] group cursor-pointer snap-center transform transition-transform hover:-translate-y-2">
                <img 
                    src="https://images.unsplash.com/photo-1621621667797-e06afc217fb0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition duration-500" 
                    alt="Couple 2"
                >
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                        <Play className="text-white ml-1 fill-white" size={24} />
                    </div>
                </div>
                <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                    <p class="text-white font-bold text-lg leading-tight mb-1">Budget Decor Hacks We Loved!</p>
                    <p class="text-gray-300 text-sm flex items-center">
                        <MapPin size={14} className="text-marigold-500 mr-1" />
                        Delhi NCR
                    </p>
                </div>
            </div>

            <!-- Video 3 -->
            <div class="min-w-[280px] md:min-w-[320px] bg-black rounded-xl overflow-hidden shadow-lg relative aspect-[9/16] group cursor-pointer snap-center transform transition-transform hover:-translate-y-2">
                <img 
                    src="https://images.unsplash.com/photo-1605389669528-7634d0b43170?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition duration-500" 
                    alt="Couple 3"
                >
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                        <Play className="text-white ml-1 fill-white" size={24} />
                    </div>
                </div>
                <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent">
                    <p class="text-white font-bold text-lg leading-tight mb-1">Finding the Perfect Caterer</p>
                    <p class="text-gray-300 text-sm flex items-center">
                        <MapPin size={14} className="text-marigold-500 mr-1" />
                        Mumbai
                    </p>
                </div>
            </div>
        </div>

        <!-- Text Testimonials Scroller -->
        <div class="mt-10 bg-champagne/30 p-8 rounded-2xl relative border border-champagne/50">
            <Quote className="text-marigold-300 absolute top-6 left-6 opacity-50" size={48} />
            <div class="text-center max-w-3xl mx-auto relative z-10">
                <p class="text-xl text-gray-700 italic font-serif leading-relaxed">
                    "We were so worried about hidden costs with caterers. WeddingNuts gave us 3 verified options in
                    Delhi, and we saved almost 20% compared to other quotes. The food was amazing!"
                </p>
                <div class="mt-4 font-bold text-gray-900 flex flex-col items-center">
                    <span>Rahul & Priya</span>
                    <span class="text-sm font-normal text-gray-500">Married Dec 2025</span>
                </div>
            </div>
        </div>
    </div>
</section>
