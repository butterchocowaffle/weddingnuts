---
import { Play, Quote, MapPin, Instagram, Youtube, Twitter } from "lucide-react";
import SpotlightCard from "./SpotlightCard";
import landingContent from "../data/landing-content.json";

const { testimonials } = landingContent;
const { videoTestimonials, textTestimonials } = testimonials;

// Fallback thumbnails for video testimonials without a thumbnail
const fallbackThumbnails = [
    "https://images.pexels.com/photos/35556974/pexels-photo-35556974.jpeg",
    "https://images.pexels.com/photos/35567970/pexels-photo-35567970.jpeg",
    "https://images.pexels.com/photos/35567964/pexels-photo-35567964.jpeg",
    "https://images.pexels.com/photos/35567941/pexels-photo-35567941.jpeg",
    "https://images.pexels.com/photos/1589216/pexels-photo-1589216.jpeg",
    "https://images.pexels.com/photos/725458/pexels-photo-725458.jpeg",
    "https://images.pexels.com/photos/11146331/pexels-photo-11146331.jpeg",
    "https://images.pexels.com/photos/2781104/pexels-photo-2781104.jpeg",
    "https://images.pexels.com/photos/12430047/pexels-photo-12430047.jpeg",
    "https://images.pexels.com/photos/18253230/pexels-photo-18253230.jpeg",
    "https://images.pexels.com/photos/2726181/pexels-photo-2726181.jpeg",
    "https://images.pexels.com/photos/12579916/pexels-photo-12579916.jpeg",
    "https://images.pexels.com/photos/17261593/pexels-photo-17261593.jpeg",
];

// Shuffle and assign unique fallback thumbnails
const shuffledFallbacks = [...fallbackThumbnails].sort(
    () => Math.random() - 0.5,
);
let fallbackIndex = 0;

const processedTestimonials = videoTestimonials.map((testimonial) => {
    // Types that need thumbnails: url, instagram, twitter
    const needsThumbnail =
        testimonial.type === "url" ||
        testimonial.type === "instagram" ||
        testimonial.type === "twitter";
    if (needsThumbnail && !testimonial.thumbnail) {
        return {
            ...testimonial,
            thumbnail:
                shuffledFallbacks[fallbackIndex++ % shuffledFallbacks.length],
        };
    }
    return testimonial;
});
---

<section
    class="py-16 bg-white min-h-screen snap-start relative"
    id="testimonials-section"
>
    <!-- Background Video Layer - Contains its own overflow hidden -->
    <div class="absolute inset-0 z-0 overflow-hidden">
        {
            testimonials.backgroundVideos?.map((videoStats, index) => (
                <div
                    class="testimonial-video-container absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0"
                    data-index={index}
                    aria-hidden="true"
                >
                    <video
                        autoplay
                        muted
                        playsinline
                        preload="auto"
                        class="w-full h-full object-cover"
                    >
                        <source src={videoStats} type="video/mp4" />
                    </video>
                </div>
            ))
        }
        <!-- Overlay for readability -->
        <div class="absolute inset-0 bg-white/90 backdrop-blur-[2px]"></div>
    </div>

    <!-- Content Container - No overflow restrictions -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <span
                class="text-royalPink-600 font-bold tracking-wider uppercase text-sm"
                >Testimonials</span
            >
            <h2
                class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mt-2"
            >
                Real Weddings, Real Stories
            </h2>
        </div>

        <!-- Video Stories Section -->
        <div class="mb-16">
            <h3
                class="text-xl font-bold text-gray-900 mb-6 px-2 border-l-4 border-marigold-500"
            >
                Video Stories
            </h3>
        </div>
    </div>

    <!-- Video Cards Scroll Container - Full width, outside the max-w container -->
    <div class="relative z-10 w-full overflow-x-auto hide-scroll snap-x pb-8">
        <div
            class="flex gap-6 px-4 sm:px-6 lg:px-8"
            style="padding-left: max(1rem, calc((100vw - 80rem) / 2 + 1rem)); padding-right: max(1rem, calc((100vw - 80rem) / 2 + 1rem));"
        >
            {
                processedTestimonials.map((testimonial, index) => (
                    <div class="w-[280px] h-[498px] md:w-[320px] md:h-[568px] flex-shrink-0 bg-black rounded-xl overflow-hidden shadow-lg relative group cursor-pointer snap-center transition-all duration-300 hover:shadow-2xl hover:shadow-marigold-500/20 hover:border-marigold-500/30 border border-transparent">
                        {/* Render Content Based on Type */}
                        {testimonial.type === "url" ? (
                            <>
                                {/* Thumbnail State */}
                                <div class="video-thumbnail-state w-full h-full">
                                    <img
                                        src={testimonial.thumbnail}
                                        class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition-all duration-700 group-hover:scale-105"
                                        alt={testimonial.title}
                                        loading="lazy"
                                        width="280"
                                        height="498"
                                    />
                                    <div class="absolute inset-0 flex items-center justify-center play-button-overlay">
                                        <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                                            <Play
                                                className="text-white ml-1 fill-white"
                                                size={24}
                                            />
                                        </div>
                                    </div>
                                </div>
                                {/* Video State (hidden by default) */}
                                <video
                                    class="video-player w-full h-full object-cover hidden"
                                    controls
                                    playsinline
                                    preload="none"
                                    data-src={testimonial.src}
                                >
                                    <source type="video/mp4" />
                                </video>
                            </>
                        ) : testimonial.type === "asset" ? (
                            <>
                                {/* Thumbnail/Poster State */}
                                <div class="video-thumbnail-state w-full h-full">
                                    <video
                                        class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition-all duration-700 group-hover:scale-105 pointer-events-none"
                                        muted
                                        preload="metadata"
                                    >
                                        <source
                                            src={testimonial.src}
                                            type="video/mp4"
                                        />
                                    </video>
                                    <div class="absolute inset-0 flex items-center justify-center play-button-overlay">
                                        <div class="w-14 h-14 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                                            <Play
                                                className="text-white ml-1 fill-white"
                                                size={24}
                                            />
                                        </div>
                                    </div>
                                </div>
                                {/* Video Player State (hidden by default) */}
                                <video
                                    class="video-player w-full h-full object-cover hidden"
                                    controls
                                    playsinline
                                    preload="none"
                                >
                                    <source
                                        src={testimonial.src}
                                        type="video/mp4"
                                    />
                                </video>
                            </>
                        ) : testimonial.type === "youtube" ? (
                            <iframe
                                class="w-full h-full"
                                src={testimonial.src}
                                title={testimonial.title}
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen
                            />
                        ) : testimonial.type === "instagram" ? (
                            <>
                                <img
                                    src={testimonial.thumbnail}
                                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition-all duration-700 group-hover:scale-105"
                                    alt={testimonial.title}
                                    loading="lazy"
                                    width="280"
                                    height="498"
                                />
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="w-14 h-14 bg-linear-to-br from-purple-600 via-pink-500 to-orange-400 rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                                        <Instagram
                                            className="text-white"
                                            size={24}
                                        />
                                    </div>
                                </div>
                                <a
                                    href={testimonial.src}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="absolute inset-0 z-10"
                                    aria-label={`View ${testimonial.title} on Instagram`}
                                />
                            </>
                        ) : testimonial.type === "twitter" ? (
                            <>
                                <img
                                    src={testimonial.thumbnail}
                                    class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition-all duration-700 group-hover:scale-105"
                                    alt={testimonial.title}
                                    loading="lazy"
                                    width="280"
                                    height="498"
                                />
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="w-14 h-14 bg-black rounded-full flex items-center justify-center border border-white/40 group-hover:scale-110 transition duration-300 shadow-xl">
                                        <Twitter
                                            className="text-white fill-white"
                                            size={24}
                                        />
                                    </div>
                                </div>
                                <a
                                    href={testimonial.src}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="absolute inset-0 z-10"
                                    aria-label={`View ${testimonial.title} on X`}
                                />
                            </>
                        ) : null}

                        <div class="absolute bottom-0 left-0 right-0 p-4 bg-linear-to-t from-black to-transparent pointer-events-none">
                            <p class="text-white font-bold text-lg leading-tight mb-1">
                                {testimonial.title}
                            </p>
                            <p class="text-gray-300 text-sm flex items-center">
                                <MapPin
                                    size={14}
                                    className="text-marigold-500 mr-1"
                                />
                                {testimonial.location}
                            </p>
                        </div>
                    </div>
                ))
            }
            {/* Spacer for right padding */}
            <div class="w-4 sm:w-6 lg:w-8 shrink-0" aria-hidden="true"></div>
        </div>
    </div>

    <!-- Client Reviews Section -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
        <h3
            class="text-xl font-bold text-gray-900 mb-6 px-2 border-l-4 border-royalPink-500"
        >
            Client Reviews
        </h3>
    </div>

    <!-- Text Testimonials Scroll Container - Full width -->
    <div class="relative z-10 w-full overflow-x-auto hide-scroll snap-x pb-8">
        <div
            class="flex gap-6"
            style="padding-left: max(1rem, calc((100vw - 80rem) / 2 + 1rem)); padding-right: max(1rem, calc((100vw - 80rem) / 2 + 1rem));"
        >
            {
                textTestimonials.map((item, index) => (
                    <SpotlightCard
                        client:visible
                        spotlightColor="rgba(255, 223, 186, 0.4)"
                        className="w-[85vw] max-w-[400px] md:w-[450px] !bg-champagne/30 !border-champagne/50 p-8 snap-center shrink-0 flex flex-col gap-4 h-full"
                    >
                        <Quote
                            className="text-marigold-400 opacity-60 self-start"
                            size={40}
                        />
                        <div class="relative z-10">
                            <p class="text-lg text-gray-700 italic font-serif leading-relaxed min-h-[100px] flex items-center">
                                "{item.text}"
                            </p>
                            <div class="mt-6 flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-royalPink-100 flex items-center justify-center font-bold text-royalPink-600">
                                    {item.author.charAt(0)}
                                </div>
                                <div class="flex flex-col">
                                    <span class="font-bold text-gray-900">
                                        {item.author}
                                    </span>
                                    <span class="text-sm font-normal text-gray-500">
                                        {item.subtitle}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </SpotlightCard>
                ))
            }
            {/* Spacer for right padding */}
            <div class="w-4 sm:w-6 lg:w-8 shrink-0" aria-hidden="true"></div>
        </div>
    </div>
</section>

<script>
    // Video Testimonial Card Click Handler
    const videoCards = document.querySelectorAll(".video-thumbnail-state");
    videoCards.forEach((thumbnailState) => {
        const card = thumbnailState.closest(".group");
        if (!card) return;

        const videoPlayer = card.querySelector(
            ".video-player",
        ) as HTMLVideoElement;
        const infoOverlay = card.querySelector(
            ".bg-linear-to-t",
        ) as HTMLElement;

        if (!videoPlayer) return;

        // Click to play
        thumbnailState.addEventListener("click", async (e) => {
            e.stopPropagation();

            // Load video source if not loaded (for lazy loading)
            const src = videoPlayer.dataset.src;
            const source = videoPlayer.querySelector("source");
            if (src && source && !source.src) {
                source.src = src;
                videoPlayer.load();
            }
            // For asset type - source is already set, just need to load
            if (source && source.src && videoPlayer.readyState === 0) {
                videoPlayer.load();
            }

            // Hide thumbnail, show video
            thumbnailState.classList.add("hidden");
            videoPlayer.classList.remove("hidden");
            if (infoOverlay) infoOverlay.classList.add("hidden");

            try {
                await videoPlayer.play();
            } catch (err) {
                console.log("Video play failed:", err);
                // Restore thumbnail on error
                thumbnailState.classList.remove("hidden");
                videoPlayer.classList.add("hidden");
                if (infoOverlay) infoOverlay.classList.remove("hidden");
            }
        });

        // When video ends, show thumbnail again
        videoPlayer.addEventListener("ended", () => {
            videoPlayer.classList.add("hidden");
            thumbnailState.classList.remove("hidden");
            if (infoOverlay) infoOverlay.classList.remove("hidden");
            videoPlayer.currentTime = 0;
        });

        // When video is paused (user clicks pause), keep video visible
        // but if they click outside, restore thumbnail
        videoPlayer.addEventListener("click", (e) => {
            e.stopPropagation();
        });
    });

    const section = document.getElementById("testimonials-section");
    if (section) {
        const videoContainers = section.querySelectorAll(
            ".testimonial-video-container",
        );
        const videos = Array.from(videoContainers).map((container) =>
            container.querySelector("video"),
        );
        let currentVideoIndex = -1;
        let isSwitching = false;

        const playVideoToCheck = async (videoEl) => {
            try {
                if (videoEl.readyState < 2) {
                    await new Promise((resolve) => {
                        videoEl.oncanplay = resolve;
                        setTimeout(resolve, 3000);
                    });
                }
                await videoEl.play();
                return true;
            } catch (e) {
                return false;
            }
        };

        const switchVideo = async () => {
            if (isSwitching) return;
            isSwitching = true;

            let nextIndex = (currentVideoIndex + 1) % videoContainers.length;
            let attempts = 0;
            let foundPlayable = false;

            while (attempts < videos.length && !foundPlayable) {
                const nextContainer = videoContainers[nextIndex];
                const nextVideo = videos[nextIndex];
                nextVideo.currentTime = 0;

                const isPlaying = await playVideoToCheck(nextVideo);

                if (isPlaying) {
                    if (currentVideoIndex >= 0) {
                        const currentContainer =
                            videoContainers[currentVideoIndex];
                        currentContainer.classList.remove("opacity-100");
                        currentContainer.classList.add("opacity-0");
                        const oldVideo = videos[currentVideoIndex];
                        setTimeout(() => {
                            oldVideo.pause();
                        }, 1000);
                    }

                    nextContainer.classList.remove("opacity-0");
                    nextContainer.classList.add("opacity-100");
                    currentVideoIndex = nextIndex;
                    foundPlayable = true;
                } else {
                    nextIndex = (nextIndex + 1) % videoContainers.length;
                    attempts++;
                }
            }
            isSwitching = false;
        };

        if (videos.length > 0) {
            videos.forEach((video, idx) => {
                video.removeAttribute("loop");
                video.onended = () => {
                    if (idx === currentVideoIndex && !isSwitching) {
                        switchVideo();
                    }
                };
            });
            // Observer to play only when in view
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting && currentVideoIndex === -1) {
                            switchVideo();
                        }
                    });
                },
                { threshold: 0.1 },
            );
            observer.observe(section);
        }
    }
</script>
