---
import { ArrowRight } from "lucide-react";
---

<section
    class="py-16 bg-gray-50 relative overflow-hidden min-h-screen snap-start flex flex-col justify-center"
>
    <!-- Pillars Removed -->

    <!-- Content Container -->
    <!-- Mobile: Add heavy left padding to clear the pilar -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex justify-between items-end mb-10">
            <div>
                <h2
                    class="text-3xl md:text-4xl font-serif font-bold text-gray-900"
                >
                    Build Your Dream Team
                </h2>
                <p class="text-gray-600 mt-2">
                    Everything you need for a grand celebration.
                </p>
            </div>
            <a
                href="#"
                class="hidden md:flex items-center text-royalPink-600 font-bold hover:text-royalPink-800 transition group"
            >
                View All Categories <ArrowRight
                    className="ml-2 group-hover:translate-x-1 transition-transform"
                    size={20}
                />
            </a>
        </div>

        <!-- Bento Grid Layout -->
        <!-- Mobile: 1 column, Desktop: 4 columns -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 auto-rows-[200px]">
            <!-- Venues (Large Tile) -->
            <a
                href="#"
                class="col-span-2 row-span-2 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1511285560982-1351cdeb9821?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Wedding Venue"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent p-6 flex flex-col justify-end"
                >
                    <h3 class="text-white text-2xl font-serif font-bold">
                        Venues & Lawns
                    </h3>
                    <p
                        class="text-gray-300 text-sm mt-1 opacity-0 group-hover:opacity-100 transition duration-300 transform translate-y-2 group-hover:translate-y-0"
                    >
                        From palaces to intimate gardens
                    </p>
                </div>
            </a>

            <!-- Catering -->
            <a
                href="#"
                class="col-span-2 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1555244162-803834f70033?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Catering"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Catering</h3>
                </div>
            </a>

            <!-- Decor -->
            <a
                href="#"
                class="col-span-1 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1527529482837-4698179dc6ce?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Decor"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Decor</h3>
                </div>
            </a>

            <!-- Photography -->
            <a
                href="#"
                class="col-span-1 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1606216794074-735e91aa2c92?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Photography"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Photography</h3>
                </div>
            </a>

            <!-- Attire/Makeup -->
            <a
                href="#"
                class="col-span-2 md:col-span-1 row-span-1 relative group overflow-hidden rounded-2xl shadow-md cursor-pointer block"
            >
                <img
                    src="https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                    class="w-full h-full object-cover transition duration-700 group-hover:scale-110"
                    alt="Makeup"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent p-4 flex flex-col justify-end"
                >
                    <h3 class="text-white text-xl font-bold">Makeup & Henna</h3>
                </div>
            </a>
        </div>

        <div class="mt-8 text-center md:hidden">
            <a
                href="#"
                class="inline-flex items-center text-royalPink-600 font-bold hover:text-royalPink-800 transition group"
            >
                View All Categories <ArrowRight
                    className="ml-2 group-hover:translate-x-1 transition-transform"
                    size={20}
                />
            </a>
        </div>
    </div>
</section>
