---
import { ArrowUpRight } from "lucide-react";
import Footer from "./Footer.astro";
import landingContent from "../data/landing-content.json";

const { cta } = landingContent;
---

<!-- Unified Wrapper for Snap -->
<div class="snap-start flex flex-col">
    <!-- CTA Section -->
    <section
        class="bg-royalPink-900 py-16 px-4 relative overflow-hidden shrink-0 min-h-screen flex flex-col justify-center"
        id="cta-section"
    >
        <!-- Background Video Layer -->
        <div class="absolute inset-0 z-0">
            {
                cta.backgroundVideos?.map((videoStats, index) => (
                    <div
                        class="cta-video-container absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0"
                        data-index={index}
                    >
                        <video
                            autoplay
                            muted
                            playsinline
                            preload="auto"
                            class="w-full h-full object-cover"
                        >
                            <source src={videoStats} type="video/mp4" />
                        </video>
                    </div>
                ))
            }
            <div
                class="absolute inset-0 bg-black/60 bg-gradient-to-b from-black/80 via-transparent to-black/80"
            >
            </div>
        </div>
        <div class="max-w-6xl mx-auto relative z-10 px-6">
            <div class="text-center mb-10">
                <h2
                    class="text-3xl md:text-5xl font-serif font-bold text-white mb-4"
                >
                    Ready to Plan the Perfect Wedding?
                </h2>
                <p class="text-royalPink-100 text-lg max-w-2xl mx-auto">
                    Join thousands of couples finding trusted vendors every day.
                </p>
            </div>

            <div
                class="flex flex-col md:flex-row gap-8 items-stretch justify-between"
            >
                <!-- Left: Contact Form -->
                <div
                    class="w-full md:w-3/5 bg-white/10 backdrop-blur-md p-6 md:p-8 rounded-2xl border border-white/20 shadow-2xl"
                >
                    <h3 class="text-2xl font-serif text-white mb-6">
                        Get in Touch
                    </h3>
                    <form class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <input
                                type="text"
                                placeholder="Your Name"
                                name="contact-name"
                                id="contact-name"
                                aria-label="Your Name"
                                class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-marigold-400 transition"
                            />
                            <input
                                type="tel"
                                placeholder="Phone Number"
                                name="contact-phone"
                                id="contact-phone"
                                aria-label="Phone Number"
                                class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-marigold-400 transition"
                            />
                        </div>
                        <input
                            type="email"
                            placeholder="Email Address"
                            name="contact-email"
                            id="contact-email"
                            aria-label="Email Address"
                            class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-marigold-400 transition"
                        />
                        <textarea
                            rows="3"
                            placeholder="Tell us about your dream wedding..."
                            name="contact-message"
                            id="contact-message"
                            aria-label="Tell us about your dream wedding"
                            class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:outline-none focus:border-marigold-400 transition"
                        ></textarea>
                        <button
                            type="button"
                            name="contact-submit"
                            id="contact-submit"
                            aria-label="Send Message"
                            class="w-full md:hidden bg-marigold-500 hover:bg-marigold-600 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition transform hover:-translate-y-1 active:scale-95"
                            >Send Message</button
                        >
                    </form>
                </div>

                <!-- Right: Buttons -->
                <div class="w-full md:w-2/5 flex flex-col gap-4 justify-center">
                    <button
                        class="hidden md:flex bg-marigold-500 hover:bg-marigold-600 text-white font-bold py-4 px-8 rounded-xl shadow-lg transition transform hover:-translate-y-1 hover:shadow-2xl active:scale-95 items-center justify-center gap-3 text-lg"
                    >
                        Send Message <ArrowUpRight size={20} />
                    </button>

                    <div class="h-px bg-white/20 w-full my-2 hidden md:block">
                    </div>

                    <button
                        class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white font-bold py-4 px-8 rounded-xl hover:bg-white hover:text-royalPink-900 transition transform hover:-translate-y-1 active:scale-95"
                    >
                        Find Vendors Now
                    </button>
                    <button
                        class="bg-transparent border-2 border-white/30 text-white font-bold py-4 px-8 rounded-xl hover:bg-white hover:text-royalPink-900 transition transform hover:-translate-y-1 active:scale-95"
                    >
                        List Your Business
                    </button>
                </div>
            </div>
        </div>
    </section>

    <script>
        const section = document.getElementById("cta-section");
        if (section) {
            const videoContainers = section.querySelectorAll(
                ".cta-video-container",
            );
            const videos = Array.from(videoContainers).map((container) =>
                container.querySelector("video"),
            );
            let currentVideoIndex = -1;
            let isSwitching = false;

            const playVideoToCheck = async (videoEl: HTMLVideoElement) => {
                try {
                    if (videoEl.readyState < 2) {
                        await new Promise((resolve) => {
                            videoEl.oncanplay = resolve;
                            setTimeout(resolve, 3000);
                        });
                    }
                    await videoEl.play();
                    return true;
                } catch (e) {
                    return false;
                }
            };

            const switchVideo = async () => {
                if (isSwitching) return;
                isSwitching = true;

                let nextIndex =
                    (currentVideoIndex + 1) % videoContainers.length;
                let attempts = 0;
                let foundPlayable = false;

                while (attempts < videos.length && !foundPlayable) {
                    const nextContainer = videoContainers[nextIndex];
                    const nextVideo = videos[nextIndex] as HTMLVideoElement;
                    if (nextVideo) {
                        nextVideo.currentTime = 0;

                        const isPlaying = await playVideoToCheck(nextVideo);

                        if (isPlaying) {
                            if (currentVideoIndex >= 0) {
                                const currentContainer =
                                    videoContainers[currentVideoIndex];
                                currentContainer.classList.remove(
                                    "opacity-100",
                                );
                                currentContainer.classList.add("opacity-0");
                                const oldVideo = videos[
                                    currentVideoIndex
                                ] as HTMLVideoElement;
                                if (oldVideo) {
                                    setTimeout(() => {
                                        oldVideo.pause();
                                    }, 1000);
                                }
                            }

                            nextContainer.classList.remove("opacity-0");
                            nextContainer.classList.add("opacity-100");
                            currentVideoIndex = nextIndex;
                            foundPlayable = true;
                        } else {
                            nextIndex =
                                (nextIndex + 1) % videoContainers.length;
                            attempts++;
                        }
                    } else {
                        nextIndex = (nextIndex + 1) % videoContainers.length;
                        attempts++;
                    }
                }
                isSwitching = false;
            };

            if (videos.length > 0) {
                videos.forEach((video, idx) => {
                    const v = video as HTMLVideoElement;
                    if (v) {
                        v.removeAttribute("loop");
                        v.onended = () => {
                            if (idx === currentVideoIndex && !isSwitching) {
                                switchVideo();
                            }
                        };
                    }
                });
                // Observer to play only when in view
                const observer = new IntersectionObserver(
                    (entries) => {
                        entries.forEach((entry) => {
                            if (
                                entry.isIntersecting &&
                                currentVideoIndex === -1
                            ) {
                                switchVideo();
                            }
                        });
                    },
                    { threshold: 0.1 },
                );
                observer.observe(section);
            }
        }
    </script>

    <Footer />
</div>
